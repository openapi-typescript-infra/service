{
  "$schema": "tsschema://../src/config/schema#ConfigurationSchema",
  "logging": {
    "level": "info",
    "logRequestBody": "env_switch:LOG_HTTP_REQUESTS"
  },
  "routing": {
    "openapi": true,
    "routes": "routes",
    "freezeQuery": true,
    "bodyParsers": {
      "json": true,
      "form": false
    },
    "finalHandlers": {
      "errors": {
        "enabled": true,
        "render": true,
        "unnest": "servicetype:serv"
      },
      "notFound": true
    }
  },
  "server": {
    "port": 8000,
    "internalPort": 3000,
    "hostname": "localhost"
  }
}
